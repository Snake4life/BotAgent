<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>


  <!-- logging configuration start -->
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">

      <file value=".\logs\autoBot.log"/>
      <appendToFile value="true"/>
      <appendToFile value="true"/>
      <rollingStyle value="Composite"/>
      <datePattern value="yyyyMMdd"/>
      <maxSizeRollBackups value="10"/>
      <maximumFileSize value="10MB"/>

      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{ABSOLUTE} %-5level %logger - %message%newline%exception"/>
      </layout>


    </appender>

    <appender name="ConsoleAppender" type="log4net.Appender.ManagedColoredConsoleAppender">
      <mapping>
        <level value="ERROR"/>
        <foreColor value="White"/>
        <backColor value="Red"/>
      </mapping>

      <mapping>
        <level value="WARN" />
        <foreColor value="Yellow" />
      </mapping>

      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{ABSOLUTE} %-5level %logger - %message%newline%exception"/>
      </layout>
    </appender>
    <root>
      <level value="DEBUG"/>
      <appender-ref ref="RollingFileAppender"/>
      <appender-ref ref="ConsoleAppender"/>
    </root>

  </log4net>

  <!-- logging configuration end -->
  
  
  <!-- agent configuration block -->
  <appSettings>
    <add key="botName" value ="FulcrumBot"/>
    <add key="sleepIntervaIfBotDidntFound" value="10000"/>
  
  </appSettings>

</configuration>